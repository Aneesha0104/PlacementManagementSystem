@model IEnumerable<PMS.BOL.PlacementDriveDto>;
@{
    ViewBag.Title = "PlacementDrive";
}
<!-- Content Wrapper. Contains page content -->
<div>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>College</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">PlacementDrive</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <p class="float-right">
                            <a href="@Url.Action("Create")" class="btn btn-info"><i class="fa fa-plus"></i> Add PlacementDrive<a>
                        </p>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="dynamic-table" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>InterviewDate</th>
                                        <th>CollegeId</th>
                                        <th>No of Vacancies</th>
                                        <th>Package</th>
                                        <th>Place</th>
                                        <th>Title</th>
                                        <th>Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.InterviewDate</td>
                                            <td>@item.CollegeDto?.CollegeName</td>
                                            <td>@item.NoOfVacancies</td>
                                            <td>@item.Package</td>
                                            <td>@item.Place</td>
                                            <td>@item.Title</td>
                                            <td>@item.Details</td>
                                           
                                            <td class="project-actions text-right">
                                                <a class="btn btn-info btn-sm" href="@Url.Action("Edit","PlacementDrive",new { id = @item.PlacementDriveId })"><i class="fas fa-pencil-alt">  </i> Edit </a>
                                                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete","PlacememtDrive",new { id = @item.PlacementDriveId })"><i class="fas fa-trash"> </i>Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
@section Scripts
    {
    <script>
        $(function () {
            $("#dynamic-table").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#dynamic-table_wrapper .col-md-6:eq(0)');
        });
    </script>
}
