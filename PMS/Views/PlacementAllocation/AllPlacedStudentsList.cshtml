@model IEnumerable<PMS.BOL.PlacementAllocationDto>;
@{
    ViewBag.Title = "AllPlacedStudentsList";
}
<!-- Content Wrapper. Contains page content -->
<div>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Students</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">PlacedStudents</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="dynamic-table" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Register No.</th>
                                        <th>Name</th>
                                        <th>College Name</th>
                                        <th>Gender</th>
                                        <th>Dob</th>
                                        <th>Mobile No.</th>
                                        <th>Email Id</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        @if (item.PlacementStatus == (byte)PMS.BOL.PMSEnums.PlacementStatus.ALLOCATED)
                                        {
                                            <tr>
                                                <td>@item.StudentDto.RegisterNo</td>
                                                <td>@item.StudentDto.Name</td>
                                                <td>@item.PlacementDriveDto.CollegeDto.CollegeName</td>
                                                <td>@item.StudentDto.Gender</td>
                                                <td>@item.StudentDto.Dob</td>
                                                <td>@item.StudentDto.MobileNo</td>
                                                <td>@item.StudentDto.EmailId</td>

                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
@section Scripts
    {
    <script>
        $(function () {
            $("#dynamic-table").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#dynamic-table_wrapper .col-md-6:eq(0)');
        });
    </script>
}
