@model IEnumerable<PMS.BOL.StudentDto>;
@{
    ViewBag.Title = "AllocationList";
}
<!-- Content Wrapper. Contains page content -->
<div>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Allocation List</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Allocation List</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        @using (Html.BeginForm("Allocate", "PlacementAllocation", FormMethod.Post))
                        {
                            <!-- /.card-header -->
                            <div class="card-body">
                                <div class="card-body">
                                    <table id="dynamic-table" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>Allocate</th>
                                                <th>Register No.</th>
                                                <th>Name</th>
                                                <th>Gender</th>
                                                <th>Dob</th>
                                                <th>Mobile No.</th>
                                                <th>Email Id</th>


                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <input id="@item.StudentId" type="checkbox" name="Allocate" value="@item.AllocateToDrive" checked="@item.AllocateToDrive" />
                                                    </td>
                                                    <td>@item.RegisterNo</td>
                                                    <td>@item.Name</td>
                                                    <td>@item.Gender</td>
                                                    <td>@item.Dob</td>
                                                    <td>@item.MobileNo</td>
                                                    <td>@item.EmailId</td>


                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                </div>
                                <!-- /.card-body -->
                        </div>
                            <div class="row mt-3">
                                <div class="col -12 text-right">

                                    <button class="btn btn-primary" type="submit">Allocate</button>

                                </div>
                            </div>
                        }
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
